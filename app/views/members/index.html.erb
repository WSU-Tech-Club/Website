<%= link_to 'New Member', new_member_path, :class => "btn btn-mini btn-primary pull-right" %>
<h3>Members</h3>

<table class="table">
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Active</th>
    <th>Github Profile</th>
    <th>Major</th>
    <th>Skills</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @members.each do |member| %>
  <tr>
    <td><%= member.full_name %></td>
    <td><%= member.email %></td>
    <td>
    <% if member.active %>
        <i class="icon-ok"></i>
    <% else %>
        <i class="icon"></i>
    <% end %>
    </td>
    <td><%= member.github_profile %></td>
    <td><%= member.major %></td>
    <td><%= member.skills %></td>
    <td><%= link_to 'Show', member %></td>
    <td><%= link_to 'Edit', edit_member_path(member) %></td>
    <td><%= link_to 'Destroy', member, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>


