<h1>Members</h1>

<table class="table">
  <tr>
    <th>First name</th>
    <th>Last name</th>
    <th>Email</th>
    <th>Active</th>
    <th>Github profile</th>
    <th>Major</th>
    <th>Skills</th>
    <th>Github access token</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @members.each do |member| %>
  <tr>
    <td><%= member.first_name %></td>
    <td><%= member.last_name %></td>
    <td><%= member.email %></td>
    <td>
    <% if member.active %>
        <i class="icon-ok"></i>
    <% end %>
    </td>
    <td><%= member.github_profile %></td>
    <td><%= member.major %></td>
    <td><%= member.skills %></td>
    <td><%= member.github_access_token %></td>
    <td><%= link_to 'Show', member %></td>
    <td><%= link_to 'Edit', edit_member_path(member) %></td>
    <td><%= link_to 'Destroy', member, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Member', new_member_path %>
